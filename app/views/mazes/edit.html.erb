<h1 class="text-center my-4">Maze bearbeiten</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <%= form_with(model: @maze, local: true) do |f| %>
            <div class="mb-3">
                <%= f.label :name, "Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= f.label :size, "GrÃ¶ÃŸe", class: "form-label" %>
                <%= f.select :size, (5..20).map { |n| [n.to_s + "x" + n.to_s, n] }, {}, class: "form-select" %>
            </div>

            <div class="mb-3">
                <%= f.label :difficulty, "Schwierigkeit", class: "form-label" %>
                <%= f.select :difficulty, (1..5).map { |n| ["#{n}/5", n] }, {}, class: "form-select" %>
            </div>

            <div class="text-center">
                <%= f.submit "Speichern", class: "btn btn-primary" %>
                <%= link_to "Abbrechen", mazes_path, class: "btn btn-secondary" %>
            </div>
        <% end %>
    </div>
</div>
