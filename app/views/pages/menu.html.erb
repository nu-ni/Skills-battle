<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold">Hallo <%= @name %>!</h1>
        <p class="lead text-muted">Was möchtest du tun?</p>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Wähle eine Option</h5>
                    <div class="d-grid gap-3">
                        <%= link_to "Maze hochladen", new_maze_path, class: "btn btn-primary btn-lg" %>
                        <%= link_to "Maze spielen", mazes_path, class: "btn btn-success btn-lg" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
